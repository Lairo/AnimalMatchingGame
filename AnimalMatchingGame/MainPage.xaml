                <Button HeightRequest="110" Clicked="Button_Clicked" WidthRequest="110" FontSize="60" BackgroundColor="LightBlue" BorderColor="#000000" BorderWidth="1" />
                <Button HeightRequest="110" Clicked="Button_Clicked" WidthRequest="110" FontSize="60" BackgroundColor="LightBlue" BorderColor="#000000" BorderWidth="1" />
